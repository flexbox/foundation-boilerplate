          .small-4.columns
            label.right.inline for="about-email-confirm"
              'Confirm email
              small required
          .small-8.columns
            input type="email" id="about-email-confirm" data-equalto="about-email" required=""
            small class="error" Email confirmation not match
        .row
          .small-4.columns
            label.right.inline for="about-password"
              'Password
          .small-8.columns
            input type="password" id="about-password" placeholder="il0v3sc13nc3" required=""
